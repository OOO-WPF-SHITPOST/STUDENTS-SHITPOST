<Window x:Class="Nedelyaeva.GradeEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор оценки" Height="280" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Студент:" Grid.Row="0"/>
        <ComboBox x:Name="StudentCombo" Grid.Row="0" Margin="80,0,0,0" Width="280" DisplayMemberPath="Display" />

        <Label Content="Дисциплина:" Grid.Row="1" Margin="0,10,0,0"/>
        <ComboBox x:Name="SubjectCombo" Grid.Row="1" Margin="80,10,0,0" Width="280" DisplayMemberPath="Name"/>

        <Label Content="Оценка (1-5):" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox x:Name="GradeValueBox" Grid.Row="2" Margin="100,10,0,0" Width="60"/>

        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Click="Save_Click" Width="100" Margin="5"/>
            <Button Content="Отмена" Click="Cancel_Click" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>